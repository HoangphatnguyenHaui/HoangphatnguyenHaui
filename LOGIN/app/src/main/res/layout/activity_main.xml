<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Date and Time Pickers -->
        <TextView
            android:id="@+id/text_start_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày giờ bắt đầu:" />

        <EditText
            android:id="@+id/edit_start_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:focusable="false"
            android:clickable="true"
            android:hint="Chọn ngày giờ bắt đầu" />

        <TextView
            android:id="@+id/text_end_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày giờ kết thúc:" />

        <EditText
            android:id="@+id/edit_end_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:focusable="false"
            android:clickable="true"
            android:hint="Chọn ngày giờ kết thúc" />

        <!-- Device Selection -->
        <TextView
            android:id="@+id/text_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn thiết bị:"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_washing_machines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_washing_machine_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy giặt 1" />

                <CheckBox
                    android:id="@+id/check_washing_machine_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy giặt 2" />

                <CheckBox
                    android:id="@+id/check_washing_machine_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy giặt 3" />

                <CheckBox
                    android:id="@+id/check_washing_machine_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy giặt 4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dryers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_dryer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy sấy 1" />

                <CheckBox
                    android:id="@+id/check_dryer_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy sấy 2" />

                <CheckBox
                    android:id="@+id/check_dryer_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy sấy 3" />

                <CheckBox
                    android:id="@+id/check_dryer_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy sấy 4" />
            </LinearLayout>
        </LinearLayout>

        <!-- Booked Devices Display -->
        <TextView
            android:id="@+id/text_booked_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách các thiết bị đã đặt:"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <!-- Price and Message Display -->
        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền: 0 VNĐ"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/button_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Làm mới danh sách các thiết bị đã đặt"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận đặt lịch"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
